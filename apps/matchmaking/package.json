{
  "name": "@/matchmaking",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "main": "src/http/clusters.ts",
  "scripts": {
    "start": "dotenv -e ../../.env -- tsx .",
    "dev": "nodemon",
    "lint": "eslint ./**/*.ts",
    "format": "cd ../../ && pnpm format"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@/eslint-config"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "./src"
    ],
    "exec": "npm start",
    "ext": "ts, js"
  },
  "dependencies": {
    "@/utils": "workspace:*",
    "@/db": "workspace:*",
    "@/env": "workspace:*",
    "@/redis": "workspace:*",
    "discord-api-types": "^0.37.76",
    "drizzle-orm": "^0.30.4",
    "hyper-express": "^6.14.12",
    "jsonwebtoken": "^9.0.2",
    "tsx": "^4.7.0",
    "typescript": "^5.4.3"
  },
  "devDependencies": {
    "@/eslint-config": "workspace:*",
    "@/tsconfig": "workspace:*",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0"
  }
}